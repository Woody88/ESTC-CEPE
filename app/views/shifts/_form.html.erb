<%= simple_form_for(@shift) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :position %>
    <%= f.input :date, :as => :date_picker  %>
    <%= f.input :start, :as => :time_picker  %>
    <%= f.input :end, :as => :time_picker  %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
