<div class="container">
    <div class="row centered-form">
    	<div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        	<div class="panel panel-default">
        		<div class="panel-heading">
			    	<h3 class="panel-title">Sign Up<small>unifor!</small></h3>
			 			</div>

			<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  			<%= f.error_notification %>
  				<div class="row">
			    	<div class="col-xs-6 col-sm-6 col-md-6">
			    		<div class="form-group">
			                <%= f.input :fname, label: false,placeholder: "First Name",:class => "form-control input-sm"%>
			    		</div>
			    	</div>

			    	<div class="col-xs-6 col-sm-6 col-md-6">
			    		<div class="form-group">
			    				<%= f.input :lname, label: false,placeholder: "Last Name" %>
			    		</div>
			    	</div>
			    </div>

			<div class="form-group">
			    <%= f.input :email, label: false, placeholder: "Email Address", required: true, autofocus: true %>
			</div>

			 <div class="row">
			    <div class="col-xs-6 col-sm-6 col-md-6">
			    	<div class="form-group">
			    		
		    		<%= f.input :password, label: false,placeholder: "Password", required: true, hint: false %>
			    	</div>
			    </div>

				<div class="col-xs-6 col-sm-6 col-md-6">
			    	<div class="form-group">
			    		<%= f.input :password_confirmation, label: false,placeholder: "Confirm Password", required: true %>
			    	</div>
			    </div>
			</div>
  	
    			<%= f.button :submit, "Sign Up", :class => "btn btn-info btn-block" %>

			<% end %>
			</div>
		</div>
	</div>
</div>


